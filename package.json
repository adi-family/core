{
  "name": "adi-simple",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"bun run backend:dev\" \"bun run client:dev\" \"bun run tailwind:dev\"",
    "backend:dev": "bun --watch backend/index.ts",
    "client:dev": "vite --config client/vite.config.ts",
    "client:build": "tsc -b client && vite build --config client/vite.config.ts",
    "client:preview": "vite preview --config client/vite.config.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit && tsc -b client --force",
    "tailwind:dev": "tailwindcss -i ./src/assets/input.css -o ./src/assets/output.css --cwd=./client --watch",
    "tailwind:build": "tailwindcss -i ./src/assets/input.css -o ./src/assets/output.c --cwd=./client --minify",
    "hooks:install": "sh hooks/install.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tailwindcss/cli": "^4.1.14",
    "@types/bun": "latest",
    "@types/node": "^24.7.1",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.12",
    "@google/gemini-cli": "^0.8.2",
    "@hono/zod-validator": "^0.7.4",
    "@openai/codex-sdk": "^0.46.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.14",
    "chalk": "^5.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "hono": "^4.10.1",
    "lucide-react": "^0.546.0",
    "postgres": "^3.4.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.4",
    "simple-icons": "^15.16.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^4.1.12"
  }
}
