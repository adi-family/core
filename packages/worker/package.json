{
  "name": "@adi-simple/worker",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently --names \"manager,bundles\" -c \"cyan,magenta\" \"bun --env-file=../../.env --watch ci-repository-manager.ts\" \"bun scripts/build-bundles.ts watch\"",
    "build": "bun build ci-repository-manager.ts --outdir dist --target bun && bun scripts/build-bundles.ts",
    "build:bundles": "bun scripts/build-bundles.ts",
    "build:bundles:watch": "bun scripts/build-bundles.ts watch",
    "build:bundles:clean": "bun scripts/build-bundles.ts clean",
    "start": "bun --env-file=../../.env ci-repository-manager.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@adi-simple/db": "workspace:*",
    "@adi-simple/shared": "workspace:*",
    "@adi-simple/types": "workspace:*",
    "@adi-simple/utils": "workspace:*",
    "@anthropic-ai/claude-agent-sdk": "^0.1.27",
    "@anthropic-ai/sdk": "^0.67.0",
    "@gitbeaker/rest": "^43.5.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.7.1",
    "typescript": "~5.9.3"
  }
}
